extends layoutUser

block content
    header.w3-container.w3-light-grey
        h3 Editar Post sobre o Recurso: #{recurso.titulo}
    form.w3-container(action='/publicacoes/'+recurso._id+'/'+ post.meta._id+'/editar/' method='POST')

        label Data: 
        input.w3-input(type="text" name="data" required readonly value=post.meta.data)
        label Username: 
        input.w3-input(type="text" name="nome"  required readonly value=post.meta.nome)
        label Conteúdo: 
        input.w3-input(type="text" name="conteudo" required value=post.meta.conteudo  )
        input.w3-button.w3-round.w3-black.w3-margin(type="submit" value="Enviar")
    
    footer.w3-container.w3-padding-16.w3-black
        .w3-center Recursos Académicos &copy; 2021
