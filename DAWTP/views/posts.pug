extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Lista de Posts (DAW2020)
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th TituloRecurso
              th PublicadorRecurso
              th CriadorPost
              th DataPost
              th Post


            each s in list
              tr
                td
                  a(href="/recursos/"+s.idrecurso) #{s.titulo_recurso} 
                td=s.publicador_recurso
                td=s.meta.nome
                td=s.meta.data
                td 
                  a(href="/publicacoes/"+s.idrecurso+'/'+s.idpost) Ir para o post
 


      else
        .w3-container
          p Não há posts deste recurso..
      footer.w3-container.w3-teal
          p
           a(href="/") Index 
