extends layout

block content
    .w3-container.w3-margin.w3-border
        .w3-container.w3-black
            h3 Introduza as suas credenciais:
        form.w3-container(action='/utilizadores/login' method='POST')

            label Username: 
            input.w3-input(type="text"  name="username" required)

            label Password: 
            input.w3-input(type="password"  name="password" required)
            
            input.w3-btn.w3-black(type="submit" value="Login")