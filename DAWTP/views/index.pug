extends layoutUser

block content
 

  .w3-container.w3-margin

      .w3-card-4

        header.w3-container.w3-light-grey
          h3 Notícias
          p #{data.dataRegisto}: #{data.produtor} publicou um recurso "#{data.titulo}"!
          a.w3-button.w3-dark-grey.w3-margin(href="/recursos/"+data._id) Ver

  .w3-container.w3-margin

      .w3-card-4

        header.w3-container.w3-light-grey
          h3 Eu
        .w3-container
          p Nome: #{user.nome}
          hr
          img.w3-left.w3-circle(src="/images/avatar.jpg" alt="Avatar" class="")
          p Curso: #{user.filiacao.curso}
          p Departamento: #{user.filiacao.departamento}
          p Nível de acesso: #{user.nivel}    
        button.w3-button.w3-block.w3-dark-grey(onclick="location.href='/utilizadores/"+user._id+"';" ) Meu Perfil

