extends layout

block content
    .w3-container.w3-margin.w3-border
        .w3-container.w3-black
            h3 Registo de utilizador:
            
        form.w3-container(action='/utilizadores/registo' method='POST')

            label Username: 
            input.w3-input(type="text"  name="_id" required)
            if(erro)
                p.w3-text-red #{erro}
                
            label Password: 
            input.w3-input(type="password"  name="password" required)

            label Nome
            input.w3-input(type="text"  name="nome" required)

            label Email
            input.w3-input(type="text"  name="email" required)

            label NÃ­vel (0-Consumidor | 1-Produtor | 2- Admin)
            select(name="nivel")
                option(value=0) Consumidor
                option(value=1) Produtor
                option(value=2) Admin

            br

            label Estudante
            input(type="checkbox" name="filiacao.estudante" value="true")

            br 

            label Docente
            input(type="checkbox" name="filiacao.docente" value="true")

            br

            label Curso
            input.w3-input(type="text"  name="filiacao.curso" required)

            label Departamento
            input.w3-input(type="text"  name="filiacao.departamento" required)


            input.w3-btn.w3-black(type="submit" value="Enviar")
